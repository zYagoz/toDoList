<div class="modal" id="editModal" aria-hidden="true">
    <div class="modal-content" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
        <h3 id="modalTitle">Editar Nome da Lista</h3>
        <form id="editForm" method="POST" novalidate>
            <input type="text" name="name" id="editInput" placeholder="Novo nome da lista" autocomplete="off" required>
            <small id="editError" class="input-error" aria-live="polite" style="display:none;">
                O nome precisa ter pelo menos 3 caracteres.
            </small>
            <div class="modal-actions">
                <button type="submit" class="btn-primary" id="saveBtn" disabled>Salvar</button>
                <button type="button" class="btn-secondary" id="closeModal">Cancelar</button>
            </div>
        </form>
    </div>
</div>