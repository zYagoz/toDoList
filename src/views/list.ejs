<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= list ? list.name : 'Lista' %> - Tarefas
    </title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body data-list-id="<%= list ? list.id : '' %>">
    <div class="container">
        <header class="header">
            <div class="back-navigation">
                <a href="/" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Voltar às Listas
                </a>
            </div>

            <% if (list) { %>
                <div class="list-header-detail">
                    <h1><i class="fas fa-list-alt"></i>
                        <%= list.name %>
                    </h1>
                    <div class="list-meta">
                        <span class="status-badge <%= list.status === 'completed' ? 'completed' : 'pending' %>">
                            <i class="fas <%= list.status === 'completed' ? 'fa-check-circle' : 'fa-clock' %>"></i>
                            <%= list.status==='completed' ? 'Concluída' : 'Pendente' %>
                        </span>
                        <span class="created-info">
                            <i class="fas fa-calendar"></i>
                            Criada em <%= new Date(list.createdAt).toLocaleDateString('pt-BR') %>
                        </span>
                    </div>
                </div>

                <div class="list-actions-bar task-actions">
                    <button class="btn-primary edit-btn" id="editListBtn" data-id="<%= list.id %>"
                        data-name="<%= list.name %>" title="Editar">
                        <i class="fas fa-edit"></i> Editar Lista
                    </button>
                    <form action="/list/status/<%= list.id %>" method="POST">
                        <button class="btn-secondary <%= list.status === 'completed' ? 'btn-completed' : '' %>"
                            id="toggleStatusBtn">
                            <i class="fas <%= list.status === 'completed' ? 'fa-undo' : 'fa-check' %>"></i>
                            <%= list.status==='completed' ? 'Concluída' : 'Concluir' %>
                        </button>
                    </form>

                    <form action="/list/delete/<%= list.id %>" method="POST">
                        <button class="btn-danger" id="deleteListBtn">
                            <i class="fas fa-trash"></i> Excluir Lista
                        </button>
                    </form>
                </div>
            <% } %>
        </header>

        <% if (list) { %>

            <div class="task-create-section">
                <form class="task-form" action="/lists/<%= list.id %>/tasks" method="POST">
                    <div class="input-group">
                        <input type="text" name="taskName" placeholder="Adicionar nova tarefa..." required>
                        <textarea name="taskDescription" placeholder="Descrição (opcional)" rows="2"></textarea>
                        <div class="form-row">
                            <select name="priority" class="priority-select">
                                <option value="low">Baixa Prioridade</option>
                                <option value="medium" selected>Média Prioridade</option>
                                <option value="high">Alta Prioridade</option>
                            </select>
                            <input type="date" name="dueDate" class="date-input">
                            <button type="submit" class="btn-create">
                                <i class="fas fa-plus"></i> Adicionar
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="tasks-container">
                <% if (!list.tasks || list.tasks.length===0) { %>
                    <div class="empty-tasks">
                        <i class="fas fa-clipboard-check"></i>
                        <h3>Nenhuma tarefa adicionada</h3>
                        <p>Adicione sua primeira tarefa usando o formulário acima</p>
                    </div>
                <% } else { %>
                    <div class="tasks-header">
                        <h2>Tarefas (<%= list.tasks.length %>)</h2>
                        <div class="tasks-filters">
                            <button class="filter-btn active" data-filter="none">
                                <i class="fas fa-list"></i> Todas
                            </button>
                            <button class="filter-btn" data-filter="incompleted">
                                <i class="fas fa-clock"></i> Pendentes
                            </button>
                            <button class="filter-btn" data-filter="completed">
                                <i class="fas fa-check"></i> Concluídas
                            </button>
                        </div>
                    </div>

                    <% 
                        const today = new Date().toISOString().split('T')[0]; // yyyy-mm-dd
                        list.tasks.forEach(function(task) { 
                            const isOverdue = task.dueDate && task.dueDate < today && task.status !== 'completed';
                    %>
                    <div class="task-card <%= task.status %> priority-<%= task.priority %> <%= isOverdue ? 'overdue' : '' %>"
                        data-task-id="<%= task.id %>">

                        <div class="task-checkbox">
                            <input type="checkbox" id="task-<%= task.id %>" class="task-complete-checkbox"
                                data-task-id="<%= task.id %>" <%=task.status==='completed' ? 'checked' : '' %>>
                            <label for="task-<%= task.id %>"></label>
                        </div>

                        <div class="task-content">
                            <h4 class="task-name">
                                <%= task.name %>
                            </h4>
                            <% if (task.description) { %>
                                <p class="task-description">
                                    <%= task.description %>
                                </p>
                            <% } %>
                            <div class="task-meta">
                                <span class="priority-badge priority-<%= task.priority %>">
                                    <i class="fas fa-flag"></i>
                                    <%= task.priority==='high' ? 'Alta' : task.priority==='medium' ? 'Média' : 'Baixa' %>
                                </span>
                                <% if (task.dueDate) { %>
                                    <span class="due-date"><i class="fas fa-calendar-alt"></i>
                                        <%= task.dueDate.split('-').reverse().join('/') %>
                                    </span>
                                <% } %>
                                <span class="created-date"><i class="fas fa-clock"></i>
                                    <%= new Date(task.createdAt).toLocaleDateString('pt-BR') %>
                                </span>
                            </div>
                        </div>

                        <!-- Botão de concluir -->
                        <form action="/lists/<%= list.id %>/tasks/complete/<%= task.id %>" method="POST"
                            class="task-actions">
                            <button type="submit" class="btn-icon btn-complete" title="Concluir Tarefa">
                                <i class="fas fa-check-circle"></i>
                            </button>
                        </form>

                        <!-- Botão de editar e excluir -->
                        <div class="task-actions">
                            <button type="button" class="btn-icon btn-edit" title="Editar"
                                data-task-id="<%= task.id %>" data-task-name="<%= task.name %>"
                                data-task-desc="<%= task.description ? task.description : '' %>"
                                data-task-priority="<%= task.priority || 'medium' %>"
                                data-task-due="<%= task.dueDate ? (task.dueDate.includes('/') ? task.dueDate.split('/').reverse().join('-') : task.dueDate) : '' %>">
                                <i class="fas fa-edit"></i>
                            </button>

                            <form action="/lists/<%= list.id %>/tasks/delete/<%= task.id %>" method="POST">
                                <button class="btn-icon btn-delete" title="Excluir"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>

                        <!-- Badge de atraso -->
                        <% if(isOverdue) { %>
                            <span class="task-overdue-badge">Atrasada</span>
                        <% } %>

                    </div>
                    <% }); %>
                <% } %>
            </div>
        <% } else { %>
            <div class="error-state">
                <i class="fas fa-exclamation-triangle"></i>
                <h2>Lista não encontrada</h2>
                <p>A lista que você está procurando não existe ou foi removida.</p>
                <a href="/" class="btn-primary">
                    <i class="fas fa-home"></i> Voltar ao Início
                </a>
            </div>
        <% } %>
    </div>

    <%- include('partials/modal') %>
    <%- include('partials/task-modal') %>

    <script src="/js/modal.js"></script>
    <script src="/js/task-modal.js"></script>
    <script src="/js/filter.js"></script>

</body>
</html>
