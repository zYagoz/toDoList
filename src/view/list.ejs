<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= list.name %> - Detalhes</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <div class="back-navigation">
            <a href="/" class="btn-back"><i class="fas fa-arrow-left"></i> Voltar</a>
        </div>

        <header class="list-header-detail">
            <h1><%= list.name %></h1>
            <div class="list-meta">
                <span class="created-info">Criado em: <%= list.createdAt %></span>
            </div>
        </header>

        <section class="task-create-section">
            <form action="/task/create" method="POST" class="input-group">
                <input type="hidden" name="listId" value="<%= list.id %>">
                <input type="text" name="taskName" placeholder="Digite o nome da tarefa" required>
                <button class="btn-create" type="submit">Adicionar Tarefa</button>
            </form>
        </section>

        <section class="tasks-container">
            <% if (list.tasks && list.tasks.length > 0) { %>
                <div class="tasks-list">
                    <% list.tasks.forEach(task => { %>
                        <div class="task-card <%= task.completed ? 'completed' : '' %>">
                            <div class="task-content">
                                <h3 class="task-name"><%= task.name %></h3>
                                <% if (task.description) { %>
                                    <p class="task-description"><%= task.description %></p>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-tasks">
                    <i class="fas fa-clipboard-list"></i>
                    <h3>Nenhuma tarefa cadastrada</h3>
                    <p>Adicione sua primeira tarefa acima!</p>
                </div>
            <% } %>
        </section>
    </div>

    <script src="https://kit.fontawesome.com/a2e0e6a6d5.js" crossorigin="anonymous"></script>
</body>
</html>
