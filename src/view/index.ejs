<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minhas Listas</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <h1><i class="fas fa-list-ul"></i> Minhas Listas</h1>
            <p class="subtitle">Gerencie suas listas e tarefas</p>
        </header>

        <section class="create-section">
            <form action="/list/create" method="POST" class="input-group">
                <input type="text" name="name" placeholder="Digite o nome da lista" required>
                <button class="btn-create" type="submit">Criar Lista</button>
            </form>
        </section>

        <section class="lists-container">
            <% if (lists && lists.length > 0) { %>
                <div class="lists-grid">
                    <% lists.forEach(list => { %>
                        <div class="list-card">
                            <div class="list-header">
                                <h2 class="list-name"><a href="/lists/<%= list.id %>"><%= list.name %></a></h2>
                                <div class="list-actions">
                                    <button class="btn-icon edit-btn" data-id="<%= list.id %>" data-name="<%= list.name %>">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form action="/list/delete/<%= list.id %>" method="POST" style="display:inline;">
                                        <button class="btn-icon btn-delete" type="submit">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-folder-open"></i>
                    <h3>Nenhuma lista encontrada</h3>
                    <p>Crie sua primeira lista acima!</p>
                </div>
            <% } %>
        </section>
    </div>

    <!-- Modal de Edição -->
    <div class="modal" id="editModal">
        <div class="modal-content">
            <h3>Editar Nome da Lista</h3>
            <form id="editForm" method="POST">
                <input type="text" name="name" id="editName" required>
                <div class="modal-actions">
                    <button type="submit" class="btn-primary">Salvar</button>
                    <button type="button" class="btn-secondary" id="closeModal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const modal = document.getElementById('editModal');
        const editButtons = document.querySelectorAll('.edit-btn');
        const editNameInput = document.getElementById('editName');
        const editForm = document.getElementById('editForm');
        const closeModal = document.getElementById('closeModal');

        editButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.dataset.id;
                const name = btn.dataset.name;
                editNameInput.value = name;
                editForm.action = `/list/update/${id}`;
                modal.classList.add('active');
            });
        });

        closeModal.addEventListener('click', () => {
            modal.classList.remove('active');
        });

        window.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.remove('active');
            }
        });
    </script>

    <script src="https://kit.fontawesome.com/a2e0e6a6d5.js" crossorigin="anonymous"></script>
</body>
</html>
